    <peripheral>
      <name>GPIOA</name>
      <description>General Purpose I/O</description>
      <groupName>GPIO</groupName>
      <baseAddress>0x40001000</baseAddress>
      <size>32</size>
      <access>read-write</access>
      <addressBlock>
        <offset>0x0</offset>
        <size>0x60</size>
        <usage>registers</usage>
      </addressBlock>
      <registers>
        <register>
          <name>DR</name>
          <description>Data Register</description>
          <addressOffset>0x0</addressOffset>
          <fields>
            <field>
              <name>GPIOA_GC4_DR</name>
              <description>GPIOA GC4 Data</description>
              <bitOffset>8</bitOffset>
              <bitWidth>1</bitWidth>
              <access>read-write</access>
            </field>
          </fields>
        </register>
        <register>
          <name>DDR</name>
          <description>Data Direction Register</description>
          <addressOffset>0x4</addressOffset>
          <fields>
            <field>
              <name>GPIOA_GC4_DDR</name>
              <description>GPIOA GC4 Direction</description>
              <bitOffset>8</bitOffset>
              <bitWidth>1</bitWidth>
              <access>read-write</access>
              <enumeratedValues>
                <enumeratedValue>
                  <name>input</name>
                  <description>Configure pin as an INPUT</description>
                  <value>0</value>
                </enumeratedValue>
                <enumeratedValue>
                  <name>output</name>
                  <description>Configure pin as an OUTPUT</description>
                  <value>1</value>
                </enumeratedValue>
              </enumeratedValues>
            </field>
          </fields>
        </register>
        <register>
          <name>CTRL</name>
          <description>Control</description>
          <addressOffset>0x8</addressOffset>
        </register>
      </registers>
    </peripheral>

    <peripheral derivedFrom="GPIOA">
      <name>GPIOB</name>
      <baseAddress>0x4000100c</baseAddress>
    </peripheral>

    <peripheral derivedFrom="GPIOA">
      <name>GPIOC</name>
      <baseAddress>0x40001018</baseAddress>
    </peripheral>

    <peripheral>
      <name>GPIOA_INT</name>
      <description>GPIOA Interrupt Control</description>
      <groupName>GPIO</groupName>
      <baseAddress>0x40001030</baseAddress>
      <size>32</size>
      <access>read-write</access>
      <addressBlock>
        <offset>0x0</offset>
        <size>0x100</size>
        <usage>registers</usage>
      </addressBlock>
      <registers>
        <register>
          <name>EN</name>
          <description>Interrupt Enable</description>
          <addressOffset>0x0</addressOffset>
        </register>
        <register>
          <name>MASK</name>
          <description>Interrupt Mask</description>
          <addressOffset>0x4</addressOffset>
        </register>
        <register>
          <name>TYPE</name>
          <description>Interrupt Type (level/edge)</description>
          <addressOffset>0x8</addressOffset>
        </register>
        <register>
          <name>POLARITY</name>
          <description>Interrupt Polarity (low/high)</description>
          <addressOffset>0x0c</addressOffset>
        </register>
        <register>
          <name>STATUS</name>
          <description>Interrupt Status</description>
          <addressOffset>0x10</addressOffset>
        </register>
        <register>
          <name>RAW_STATUS</name>
          <description>Interrupt Status Without Mask</description>
          <addressOffset>0x14</addressOffset>
        </register>
        <register>
          <name>DEBOUNCE</name>
          <description>Interrupt Debounce</description>
          <addressOffset>0x18</addressOffset>
        </register>
        <register>
          <name>CLEAR</name>
          <description>Interrupt Clear</description>
          <addressOffset>0x2c</addressOffset>
        </register>
      </registers>
    </peripheral>

  </peripherals>
</device>
